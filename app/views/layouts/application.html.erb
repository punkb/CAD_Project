              <li><%= link_to "Home", "/" , class: 'navbar-brand' %></li>
              <li><%= link_to "About Us", "application/about", class: 'navbar-brand' %></li>
             <!-- <li><%= link_to "Contact Us", "/contact"  %></li>
            -->
           <ul class="nav pull-right">
            <% if user_signed_in? %>

             <li> Signed in as <%= current_user.email%></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
              <% else %>
              <li> Guest User !</li>
             <li> <%= link_to "Sign In", new_user_session_path, :method => :get %></li>
            <li><%= link_to "Sign up", new_user_registration_path, :method => :get %></div></li>

            <% end %>
            </div>


          </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

      </div>

    </div>

