<%- model_class = Livingexpense -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:City) %>:</strong></dt>
  <dd><%= @livingexpense.City %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Country_name) %>:</strong></dt>
  <dd><%= @livingexpense.Country_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:FoodCost) %>:</strong></dt>
  <dd><%= @livingexpense.FoodCost %></dd>
  <dt><strong><%= model_class.human_attribute_name(:AccomodationCost) %>:</strong></dt>
  <dd><%= @livingexpense.AccomodationCost %></dd>
  <dt><strong><%= model_class.human_attribute_name(:TransportationCost) %>:</strong></dt>
  <dd><%= @livingexpense.TransportationCost %></dd>
  <dt><strong><%= model_class.human_attribute_name(:UserID) %>:</strong></dt>
  <dd><%= @livingexpense.UserID %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              livingexpenses_path, :class => 'btn'  %>
              <% if current_user.admin? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_livingexpense_path(@livingexpense), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              livingexpense_path(@livingexpense),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
              <% end %>
</div>
